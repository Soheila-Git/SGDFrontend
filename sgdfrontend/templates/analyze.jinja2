<!DOCTYPE html>
<title>Analyze</title>

{% extends "templates/global_layout.jinja2" %}

{% block body %}

<div id="center_title" class="row">
	<h2><span class="gene_name">{{bioent_display_name}}/{{bioent_format_name}}</span> {{list_type}}</h2>
</div>


<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div id='sidebar' class="small-3 columns">
		<ul data-magellan-expedition="fixed" class="side-nav" id="side-nav-sticky">
			<li id="nav-title"><h5><a href="{{bioent_link}}">{{bioent_display_name}}/{{bioent_format_name}}</a> {{list_type}}</h5></li>
			<li data-magellan-arrival="analyze"><a href="#analyze">Tools</a></li>
          	<li data-magellan-arrival="gene_list"><a href="#gene_list">Genes</a></li>
		</ul>
	</div>
	
	<div class="small-9 columns"> 

<!-- Analyze
================================================== -->
<section id="analyze" data-magellan-destination="analyze">
	<div class="page-header">
		<h1>Tools</h1>
		
		<ul class="button-group even-4">
  			<li class="span3">
  				<a href="" class="large button expand">
    				<div class="caption">
      					<h3>GO Term Finder</h3>
      					<p>Find common features between genes.</p>
    				</div>
    			</a>
  			</li>
  			
  			<li class="span3">
  				<a href="" class="large button expand">
    				<div class="caption">
      					<h3>GO Slim Mapper</h3>
      					<p>Sort genes into broad categories.</p>
    				</div>
    			</a>
  			</li>
  			
  			<li class="span3">
  				<a href="" class="large button expand">
    				<div class="caption">
      					<h3>SPELL</h3>
      					<p>View expression data.</p>
    				</div>
    			</a>
  			</li>
  			
  			<li class="span3">
  				<a href="" class="large button expand">
    				<div class="caption">
      					<h3>YeastMine</h3>
      					<p>Conduct advanced analysis.</p>
    				</div>
    			</a>
  			</li>
		</ul>
	</div>
</section>

<!-- Gene List
================================================== -->
<section id="gene_list" data-magellan-destination="gene_list">
	<div class="page-header">
		<h1>Genes <span id='gene_list_header'>({{bioents|length}})</span></h1>
		
		<div class="row">
			<div class="button-bar">
				<ul class="button-group radius">
					<li><a class="small button secondary">Download</a></li>
				</ul>
			</div>
		</div>
		
		<table class='table table-striped table-bordered table-condensed' id='gene_list_table' width="100%">
			<thead>
  				<tr>
  					<th>Gene Name</th>
  					<th>Description</th>
  				</tr>
  			</thead>
  			{% for bioent in bioents %}
  				<tr>
    				<td><a href="{{link}}">{{bioent['display_name']}}</a></td>
    				<td>{{bioent['description']}}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
</section>
<br>
<br>
<br>
<br>
<br>
<br>
</div>
</div>

{% endblock body %}

{% block scripts %}
<script>
	function set_up_gene_table() {		
		var options = {};
		options["bPaginate"] = false;
		options["aaSorting"] = [[0, "asc"]];
		options["aoColumns"] = [null, null];
        $('#gene_list_table').dataTable(options);
	}
	
	
	$(document).ready(function() {
		//Set up gene table
		set_up_gene_table();
		
  	});
</script>


{% endblock scripts %}

