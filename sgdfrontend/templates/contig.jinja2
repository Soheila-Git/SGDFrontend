<!DOCTYPE html>

<script>
	var sequence_details_link = "{{sequence_details_link}}";
    var download_table_link = "{{download_table_link}}";
    var download_sequence_link = "{{download_sequence_link}}";

	var display_name = "{{ contig.display_name }}";
    var format_name = "{{ contig.format_name }}";
    var length = "{{ contig.length }}";
    var residues = "{{ contig.residues }}";

</script>

<title>{{ contig.display_name }} Contig</title>

{% extends "templates/global_layout.jinja2" %}

{% block body %}

<div id="center_title" class="row">
	<h2>Contig: <span class="gene_name">{{ contig.display_name }}</span></h2>
</div>

<!-- Navbar
================================================== -->
<div class="row">
	
    <!-- Includes navbar.html into template -->
    {% include "templates/navbar.jinja2" %}

    <div class="small-12 large-9 columns content-column">

        <script>
        //Set up navbar
            add_navbar_title('Contig: <span class="gene_name">{{ contig.display_name }}</span>');
            add_navbar_element('Summary', 'summary');
            add_navbar_element('Features', 'feature');
            add_navbar_element('Sequence', 'sequence');
        </script>

        <!-- Summary
================================================== -->
        <section id="summary" data-magellan-destination="summary">
            <div class="page-header">
                <h1>Summary</h1>
                <ul class="unstyled">
                    <li><strong>Strain: </strong>{{ contig.format_name }}</li>
                    <li><strong>Length: </strong>{{ contig.length }}</li>
                    <li>
                        <div class="button-bar">
                            <ul class="button-group radius">
                                <li><a id="sequence_download" class="small button secondary"><i class="icon-download-alt"></i> Download Sequence</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </section>

        <!-- Features
================================================== -->
        <section id="feature" data-magellan-destination="feature">
            <div class="page-header">
                <h1>Features
                    <span class="round secondary label">
                        <span id="feature_header"></span>
                        <small id="feature_header_type"></small>
                    </span>
                </h1>
                <div id="feature_div"></div>
                <div class="button-bar">
                    <ul class="button-group radius">
                        <li><a id="feature_table_download" class="small button secondary"><i class="icon-download-alt"></i> Download</a></li>
                    </ul>
                </div>
                <table class="table table-striped table-bordered table-condensed" id="feature_table" width="100%">
                    <thead>
                        <tr>
                            <th hidden>Evidence ID</th>
                            <th>Feature</th>
                            <th>Feature Type</th>
                            <th>Chromosomal Coordinates</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </section>

    </div>
</div>
{% endblock body %}

{% block scripts %}
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript" src="https://www.google.com/jsapi?autoload={'modules':[{'name':'visualization',
       'version':'1','packages':['timeline']}]}"></script>
<script src="/static/js/contig.js"></script>
{% endblock scripts %}
