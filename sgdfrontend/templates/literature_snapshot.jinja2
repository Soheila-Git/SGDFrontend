<!DOCTYPE html>

<script>
    var overview_json = {{ overview | safe }};
</script>

<title>Literature Snapshot</title>

{% extends "global_layout.jinja2" %}


{% block body %}

<div id="center_title" class="row">
	<h2>Literature Snapshot</h2>
</div>

<div class="row">

    <!-- Navbar
    ================================================== -->
    <!-- Includes navbar.html into template -->
    {% include "navbar.jinja2" %}

    <div class="small-12 large-9 columns content-column">
        <script>
            add_navbar_title('Literature Snapshot');
            add_navbar_element("Data Overview", "summary");
            add_navbar_element("Annotations Over Time", "over_time");
            add_navbar_element("Histograms", "histograms");
            add_navbar_element("Get Literature Data", "data");
            add_navbar_element("Download Links", "download");

        </script>

        <!-- Summary
        ================================================== -->
        <section id="summary" data-magellan-destination="summary">
            <div class="page-header">
                <h1>Data Overview</h1>
                <p>SGD manually annotates literature...</p>
                <div class="panel">
                    <div class="row">
                        <div class="large-4 columns" id="topics_diagram"></div>
                    </div>
                </div>
            </div>
        </section>

        <section id="over_time" data-magellan-destination="over_time">
	        <div class="page-header">
                <h1>Annotations Over Time</h1>
                <div class="panel">
                    <div id="over_time_diagram"></div>
                </div>
            </div>
        </section>

        <section id="histograms" data-magellan-destination="histograms">
	        <div class="page-header">
                <h1>Histograms</h1>
                <div class="panel">
                    <div id="reference_histogram_diagram"></div>
                    <div id="gene_histogram_diagram"></div>
                </div>
            </div>
        </section>

        <section id="data" data-magellan-destination="data">
	        <div class="page-header">
		        <h1>Get Literature Data</h1>
		        Get literature data for <input placeholder="Gene name, systematic ORF name, or SGDID" style="width:350px"></input><a class="secondary button"><i class="fa fa-search"></i></a>
		        <br><br>
		    </div>
        </section>

        <section id="download" data-magellan-destination="download">
	        <div class="page-header">
		        <h1>Download Links</h1>
		        <a href="http://downloads.yeastgenome.org/curation/literature/gene_literature.tab">All Literature Data</a>
		    </div>
        </section>

    </div><!-- .tab-content -->
</div>
{% endblock body %}

{% block scripts %}
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
{% endblock scripts %}



