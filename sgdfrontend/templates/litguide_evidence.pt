<div metal:use-macro="layout">
  <div metal:fill-slot="content">


<body>
	
<!-- Subhead
================================================== -->
<header class="jumbotron subhead" id="overview">
	<div class="container">
		<br></br>
		<h1><span tal:content="structure display_name"></h1>
	</div>
</header>

<div class="container-fluid">


<!-- Docs nav
================================================== -->
<div class="row-fluid">
	<div class="span3 bs-docs-sidebar">
		<ul class="nav nav-list bs-docs-sidenav" id='navbar' name='navbar' style="margin-left:auto; margin-right:auto">
			<li><h4><span tal:content="structure name_with_link"></h4></li>
			<li><a href="#primary"><i class="icon-chevron-right"></i> Primary Literature</a></li>
          	<li><a href="#additional"><i class="icon-chevron-right"></i> Additional Literature</a></li>
          	<li><a href="#reviews"><i class="icon-chevron-right"></i> Reviews</a></li>
          	<li><a href="#go"><i class="icon-chevron-right"></i> Gene Ontology Literature</a></li>
          	<li><a href="#phenotype"><i class="icon-chevron-right"></i> Phenotype Literature</a></li>
		</ul>
	</div>
	
	<div class="span9">  


<!-- Primary
================================================== -->
<section id="primary">
	<div class="page-header">
		<h1>Primary Literature <span id='primary_header'></span></h1>
		<span id='primary_message' class="hide">No primary literature curated.</span>
		<div id='primary_wrapper'>					
			<ul id='primary_list'>
			</ul>
		</div>
	</div>
</section>

<!-- Additional
================================================== -->
<section id="additional">
	<div class="page-header">
		<h1>Additional Literature <span id='additional_header'></span></h1>
		<span id='additional_message' class="hide">No additional literature curated.</span>
		<div id='additional_wrapper'>					
			<ul id='additional_list'>
			</ul>
		</div>
	</div>
</section>

<!-- Review
================================================== -->
<section id="reviews">
	<div class="page-header">
		<h1>Reviews <span id='review_header'></span></h1>
		<span id='review_message' class="hide">No reviews curated.</span>
		<div id='review_wrapper'>					
			<ul id='review_list'>
			</ul>
		</div>
	</div>
</section>

<!-- GO
================================================== -->
<section id="go">
	<div class="page-header">
		<h1>Gene Ontology Literature <span id='go_header'></span></h1>
		<span id='go_message' class="hide">No gene ontology literature curated.</span>
		<div id='go_wrapper'>					
			<ul id='go_list'>
			</ul>
		</div>
	</div>
</section>

<!-- Phenotype
================================================== -->
<section id="phenotype">
	<div class="page-header">
		<h1>Phenotype Literature <span id='phemotype_header'></span></h1>
		<span id='phenotype_message' class="hide">No phenotype literature curated.</span>
		<div id='phenotype_wrapper'>					
			<ul id='phenotype_list'>
			</ul>
		</div>
	</div>
</section>

<script>
	function set_up_primary_list(data) {	
		set_up_count(primary.length, "primary_header");
  		set_up_references(data, "primary_list");
	}
	
	function set_up_additional_list(data) {
		set_up_count(additional.length, "additional_header");
  		set_up_references(data, "additional_list");
	}
	
	function set_up_review_list(data) {		
		set_up_count(reviews.length, "review_header");
  		set_up_references(data, "review_list");
	}
		
	function set_up_go_list(data) {
		var go = data['reference'];
		set_up_count(go.length, "go_header");
  		set_up_references(go, "go_list");
	}
		
	function set_up_phenotype_list(data) {
		var phenotype = data['reference'];
		set_up_count(phenotype.length, "phenotype_header");
  		set_up_references(phenotype, "phenotype_list");
	}
	
	$(document).ready(function() {
		//Get bioentevidence data
  		$.getJSON("${bioent_evidence_table_link}", function(data) {
  			set_up_primary_list(data['primary']);
  			set_up_additional_list(data['additional']);
  			set_up_review_list(data['reviews']);
  		});
  		
  		//Get go reference data
  		$.getJSON("${go_evidence_table_link}", set_up_go_list);
  		
  		//Get phenotype reference data
  		$.getJSON("${phenotype_evidence_table_link}", set_up_phenotype_list);
	});
</script>

</div>

</body>
</div>
</div>

