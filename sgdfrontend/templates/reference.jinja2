<!DOCTYPE html>

<title>{{ reference.display_name }}</title>

{% extends "templates/global_layout.jinja2" %}


{% block body %}

<div id="center_title" class="row">
	<h2><span class="gene_name"> {{ reference.display_name }}</span><br>{{ reference.citation }}</h2>
</div>

<div class="row">
	
<!-- Includes navbar.html into template -->
{% include "templates/navbar.jinja2" %}

<div class="small-12 large-9 columns content-column"> 
	
<!-- Includes reference_overview.html into template -->
{% include "templates/reference_overview.jinja2" %}

<!-- Interaction Evidence
================================================== -->
<section id="interaction" data-magellan-destination="interaction">
	<div class="page-header">
		<h1>Interaction Evidence <span class="round secondary label"><span id="interaction_header"></span> <small>entries for</small> <span id="interaction_gene_header"></span> <small>genes</small></span></h1>
		<p id='interaction_message' style='display:none'>No interaction evidence curated.</p>
		<div id='interaction_wrapper'>
			<div class="button-bar">
				<ul class="button-group radius">
					<li><a disabled="true" id="interaction_table_download" class="small button secondary"><i class='icon-download-alt'></i> Download</a></li>
				</ul>
						
				<ul class="button-group radius">
					<li><a disabled="true" id="interaction_table_analyze" class="small button secondary"><i class='icon-briefcase'></i> Analyze</a></li>
				</ul>
			</div>
			
			<table class='table table-striped table-bordered table-condensed' id='interaction_table' width="100%">
			<thead>
  			<tr>
  				<th></th>
  				<th>Interactor</th>
  				<th>Interactor Systematic Name</th>
  				<th>Interactor</th>
   				<th>Interactor Systematic Name</th>
  				<th>Type</th>
    			<th>Assay</th>
    			<th>Annotation</th>
    			<th>Action</th>
    			<th>Modification</th>
    			<th>Phenotype</th>
    			<th>Source</th>
    			<th>Reference</th>
    			<th>Note</th>
  			</tr>
  			</thead>
			</table>
        </div>
   </div>
</section>

<section id="spacer">
	<br>
	<br>
	<br>
	<br>
	<br>
	<br>
</section>

</div>
</div>
{% endblock body %}

{% block scripts %}

<script>
    var interaction_details_link = "{{interaction_details_link}}";
    var download_table_link = "{{download_table_link}}";
    var analyze_table_link = "{{analyze_table_link}}";
    var annotation_download_filename = "{{reference.display_name}}_interactions";
    var annotation_analyze_filename = "{{reference.display_name}} interaction genes";
</script>
<script src="/static/js/reference.js"></script>

{% endblock scripts %}
