{% extends "lite_layout.jinja2" %}

{% block title %}Blog{% endblock %}

{% block body %}

<div class="row">
	<div class="columns small-12">
		<h1>New & Noteworthy</h1>
		{% for post in posts %}
			<h2><a href="/blog/{{ post['slug'] }}">{{ post['title']}}</a></h2>
			<p>{{ post['simple_date'] }}</p>
			<hr />
			{{ post['content']|safe }}
		{% endfor %}
	</div>
</div>

{% endblock body %}
